<div class="portlet portletB">
    <h2><span>Events</span></h2>

    <div class="portlet_content"> 
        <ul>
          <% if @events.empty? %>
            <li class="clearfix">There isn't any event at <%= @date%>.
          <% else %>
              <% @events.each do |event| %>
                <li class="clearfix">
                  <%= link_to event.title, conclave_event_path(event), :title => event.title %> <%=event.start_time.to_s %> to <%=event.end_time.to_s %></li>
              <% end %>
          <% end %> 
        </ul>
    </div>    
</div>
<% if @events.empty? %>
  <div class="info_results">
      <span class="info_items">
        Events <%=@events.size > 0 ? (@events.offset + 1) : '0'%> to 
              <%=@events.size + @events.offset%> of <%=@events.total_entries%>
      </span>
      <span class="pages_navigation right">
          <%= will_paginate @events %>
      </span>
  </div>
<%end%>