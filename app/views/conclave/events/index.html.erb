
<div class="portlet portletB">
    <h2><span>Upcoming events</span></h2>
    <div class="portlet_content">
        <ul>
          <%@events.each do |event|%>
            <li class="clearfix">
                <div class="image left"><img src="garbage/foto72x72.jpg" alt="Foto XX"></div>
                <%= event.title -%>
                <br/> <%=event.opening_time %>
            </li>
          <%end%>
        </ul>
    </div>    
</div>
<% if !@events.empty? %>
  <div class="info_results">
      <span class="info_items">
        <%= page_entries_info @events %>
      </span>
      <span class="pages_navigation right">
          <%= will_paginate @events %>
      </span>
  </div>
<%end%>
       

<% content_for :sidebar do %>
  <%= render :partial => 'calendar', :locals => {:year => @year, :month => @month} -%>
<% end -%>